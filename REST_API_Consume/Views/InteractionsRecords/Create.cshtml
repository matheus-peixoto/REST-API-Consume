@model InteractionRecord

@{
    ViewData["Title"] = "Interact";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <input type="hidden" asp-for="@Model.ContactId" value="@ViewBag.ContactId" />
                <input type="hidden" asp-for="@Model.Id" value="0" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default bg-color-blue">Send!</button>
            </div>
        </form>
    </div>
</div>
