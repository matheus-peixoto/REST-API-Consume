@model List<Contact>

@{
    Contact contact = new Contact();
    ViewData["Title"] = "Contacts";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-color-purple color-white">
            <th>@Html.DisplayNameFor(m => contact.Name)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Name)</td>
                <td>
                    <a asp-controller="Contacts" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="InteractionsRecords" asp-action="Create" asp-route-id="@item.Id">Interact with the contact</a>
                </td>
            </tr>

        }
    </tbody>

</table>


<a asp-controller="Contacts" asp-action="Create" class="btn btn-default bg-color-blue">Create a Contact</a>